<section class="first-section">

  <h1 class="centered-text">Welcome to the Private Events</h1>

  <div class="welcome-container">

    <% if @user %>
      <h3>
        Hi there <%= @user.name %>,
        <% if @upcoming_events.count > 0 %>
          you have <%= @upcoming_events.count %> to attend.</h3>

          <div class="attending-events-container">

            <%= render partial: "events/event", object: @upcoming_events, as: 'events' %>

          </div>

        <% else %>
        <h3>you don't have any future events to attend to.</h3>
        <% end %>
    <% else %>
      <h3>Not a member yet? <%= link_to "Join us", signup_path %> now!</h3>
    <% end %>

  </div>

</section>
