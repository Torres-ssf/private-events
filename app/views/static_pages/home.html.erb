<section class="first-section">

  <h1 class="centered-text">Welcome to the Private Events</h1>

  <div class="welcome-container">

    <% if @user %>
      <h3>
        Hi there <%= @user.name %>,
        <% if @upcoming_events.count > 0 %>
          you have <%= @upcoming_events.count %> to attend.
        <% else %>
          you don't have any future events to attend to.
        <% end %>
      </h3>
    <% else %>
      <h3>Not a member yet? <%= link_to "Join us", signup_path %> now!</h3>
    <% end %>

  </div>

</section>
