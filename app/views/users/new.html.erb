<% provide(:title, 'Sign up') %>
<h1 class="page-heading" >Sign up</h1>

<div class="row">
  <div class="form-container">
    <%= form_for(:user, html: {class: "signup-form"}) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
