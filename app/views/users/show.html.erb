
<h2>Welcome <%= @user.name %></h2>

<p>Create a new <%= link_to "event", "events/new" %></p>

  <% if @user_events.any? %>
    <h3>Events created by you:</h3>
    <ol class="events">
    <% @user_events.each do |event| %>
      <li id="events-<%= event.id %>">
      <section>
        <div class="content">
         <h4> <%= event.name %></h4>
        <p>  <%= event.description %></p>
         <p> <%= event.location %></p>
        </div>
        <div class="time">
          Time: <%= event.time.strftime("%H:%M - %d/%m/%Y") %>
        </div>
        <%= link_to "Details", event_path(id: event.id) %>
        </section>
      </li>
    <% end %>
    </ol>
  <% else %>
    <h3>You didn't create any events yet.</h3>
  <% end %>

    <h3>Attending events:</h3>

    <% if @upcoming_events.any? %>
    <h4> Upcoming Events (<%= @upcoming_events.count %>) </h4>
    <ol class="events">
    <% @upcoming_events.each do |event| %>
