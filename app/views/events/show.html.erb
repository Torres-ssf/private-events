<h1>Event details</h1>

<section>
  <div class="content">
   <h3> <%= @event.name %></h3>
   <p>  <%= @event.description %></p>
   <p> <%= @event.location %></p>
  </div>
  <div class="time">
    Time: <%= @event.time %>
  </div>

  <p>Created by: <%= current_user.name %></p>

  <br>
  <h3>Attendees List</h2>
  <% if @event.attendees.any? %>
        <ol>
        <% @event.attendees.each do |attendee| %>
          <li><%= attendee.name %></li>
        <% end %>
        </ol>
  <% else %>
        <p>No attendees for this event yet</p>
  <% end %>
  <br>
</section>
  <br>
<%= link_to "Show all events", events_path%>
