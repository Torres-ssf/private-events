<% provide(:title, 'Create Event') %>
<h1 class="page-heading" >Create Event</h1>

<div class="row">
  <div class="form-container">
    <%= form_for(:event, html: {class: "form"}) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description %>

      <%= f.label :location %>
      <%= f.text_field :location %>

      <%= f.label :time %>
      <%= f.date_field :time %>

      <%= f.submit "Create an event", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
