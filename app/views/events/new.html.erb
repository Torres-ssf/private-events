<% provide(:title, 'Create Event') %>

  <section class="first-section">

    <h1 class="centered-text">Create Event</h1>

    <div class="form">
      <%= form_for(:event, html: {class: "signup-form"}) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>

      <%= f.label :location %>
      <%= f.text_field :location, class: "form-control" %>

      <%= f.label :time %>
      <%= f.date_field :time, class: "form-control" %>

      <%= f.submit "Create an event", class: "btn btn-primary" %>
    <% end %>
  </div>

</section>
